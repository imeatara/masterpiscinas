---
import Layout from "../layouts/Layout.astro";
import { Image } from "astro:assets";

// Assets
import faviconImg from "@/assets/logo.webp";
import whatsappIcon from "@/assets/whatsapp.svg";
import {
  EyeIcon,
  MoveLeftIcon,
  MoveRightIcon,
  MoveUpRightIcon,
} from "@lucide/astro";

// Helpers
const WSP = "5492644822296";
const mkWsp = (msg) => `https://wa.me/${WSP}?text=${encodeURIComponent(msg)}`;

const PAGE = {
  title: "Página no encontrada | Master Piscinas",
  description:
    "La página que buscás no existe o fue movida. Volvé al inicio o escribinos por WhatsApp.",
  phone: "+54 9 264 482 2296",
  email: "masterpiscinas.sj@gmail.com",
  area: "San Juan, Argentina",
};
---

<Layout title={PAGE.title} description={PAGE.description}>
  <!-- Evitar indexación -->
  <Fragment slot="head">
    <meta name="robots" content="noindex, nofollow" />
  </Fragment>

  <!-- HERO 404 -->
  <header
    class="relative bg-gradient-to-b from-neutral-200 to-neutral-50 py-16 md:py-24 overflow-hidden text-center"
  >
    <div
      class="absolute inset-0 bg-[radial-gradient(#00000010_1px,transparent_1px)] pointer-events-none [background-size:16px_16px]"
    >
    </div>

    <div class="mx-auto px-6 container">
      <div class="place-items-center grid">
        <Image
          src={faviconImg}
          alt="Master Piscinas - Logo"
          width={180}
          height={180}
          class="drop-shadow"
        />
      </div>

      <p
        class="inline-block bg-blue-700 mt-4 px-3 py-1 rounded-full font-medium text-white text-xs tracking-wide"
      >
        +14 años de experiencia
      </p>

      <h1
        class="drop-shadow mt-4 font-bold text-blue-700 text-4xl md:text-6xl italic leading-tight"
      >
        Página no encontrada (404)
      </h1>

      <p class="mt-4 text-neutral-700">
        La página que buscaste no existe o fue movida. Te ayudamos a volver.
      </p>

      <nav
        class="flex sm:flex-row flex-col justify-center items-center gap-3 mx-auto mt-8 w-full max-w-lg"
        aria-label="Acciones principales"
      >
        <a
          href="/"
          class="inline-flex justify-center items-center hover:bg-neutral-50 px-5 py-3 border border-neutral-300 rounded-full w-full sm:w-auto font-semibold text-neutral-800 transition"
        >
          <MoveLeftIcon class="mr-2 w-5 h-5" />
          Volver al inicio
        </a>
        <a
          href="/servicios"
          class="inline-flex justify-center items-center hover:bg-neutral-50 px-5 py-3 border border-neutral-300 rounded-full w-full sm:w-auto font-semibold text-neutral-800 transition"
        >
          <EyeIcon class="mr-2 w-5 h-5" />
          Ver servicios
        </a>
        <a
          href={mkWsp("Hola! Entré a una página que no existe. ¿Me ayudás?")}
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex justify-center items-center bg-blue-600 hover:bg-blue-700 px-5 py-3 rounded-full w-full sm:w-auto font-semibold text-white transition"
          aria-label="Contactar por WhatsApp"
        >
          WhatsApp
          <MoveRightIcon class="ml-2 w-5 h-5" />
        </a>
      </nav>

      <p class="sr-only">
        Navegación alternativa: Inicio, Servicios, WhatsApp de Master Piscinas.
      </p>
    </div>
  </header>

  <!-- Sugerencias -->
  <main id="contenido" class="bg-neutral-50">
    <section
      class="mx-auto px-6 py-16 container"
      aria-labelledby="sugerencias-h2"
    >
      <header class="mb-8 text-center">
        <h2
          id="sugerencias-h2"
          class="font-bold text-neutral-900 text-2xl md:text-3xl"
        >
          Quizás buscabas…
        </h2>
        <p class="mt-2 text-neutral-600">
          Accesos rápidos a las secciones más visitadas.
        </p>
      </header>

      <ul
        class="gap-4 grid sm:grid-cols-2 lg:grid-cols-3"
        aria-label="Enlaces sugeridos"
      >
        <li>
          <a
            href="/servicios/mantenimiento"
            class="flex justify-between items-center bg-white hover:shadow-md px-5 py-4 border border-neutral-200 rounded-xl transition"
          >
            <span class="font-medium text-neutral-800">Mantenimiento</span>
            <span aria-hidden="true" class="text-neutral-400">
              <MoveRightIcon class="w-5 h-5" />
            </span>
          </a>
        </li>
        <li>
          <a
            href="/servicios/limpieza-acido"
            class="flex justify-between items-center bg-white hover:shadow-md px-5 py-4 border border-neutral-200 rounded-xl transition"
          >
            <span class="font-medium text-neutral-800">Limpieza con ácido</span>
            <span aria-hidden="true" class="text-neutral-400">
              <MoveRightIcon class="w-5 h-5" />
            </span>
          </a>
        </li>
        <li>
          <a
            href="/servicios/pintura"
            class="flex justify-between items-center bg-white hover:shadow-md px-5 py-4 border border-neutral-200 rounded-xl transition"
          >
            <span class="font-medium text-neutral-800">Pintura</span>
            <span aria-hidden="true" class="text-neutral-400">
              <MoveRightIcon class="w-5 h-5" />
            </span>
          </a>
        </li>
        <li>
          <a
            href="/servicios/doble-filtrado"
            class="flex justify-between items-center bg-white hover:shadow-md px-5 py-4 border border-neutral-200 rounded-xl transition"
          >
            <span class="font-medium text-neutral-800"
              >Implementación/adaptación de doble filtrado</span
            >
            <span aria-hidden="true" class="text-neutral-400">
              <MoveRightIcon class="w-5 h-5" />
            </span>
          </a>
        </li>
        <li>
          <a
            href="/servicios/cambio-piedras-multivalvula"
            class="flex justify-between items-center bg-white hover:shadow-md px-5 py-4 border border-neutral-200 rounded-xl transition"
          >
            <span class="font-medium text-neutral-800"
              >Cambio de piedras / Multiválvula</span
            >
            <span aria-hidden="true" class="text-neutral-400">
              <MoveRightIcon class="w-5 h-5" />
            </span>
          </a>
        </li>
        <li>
          <a
            href="/servicios/pulido-placas"
            class="flex justify-between items-center bg-white hover:shadow-md px-5 py-4 border border-neutral-200 rounded-xl transition"
          >
            <span class="font-medium text-neutral-800">Pulido de placas</span>
            <span aria-hidden="true" class="text-neutral-400">
              <MoveRightIcon class="w-5 h-5" />
            </span>
          </a>
        </li>
        <li class="sm:col-span-2 lg:col-span-3">
          <a
            href="/servicios/reparaciones"
            class="flex justify-between items-center bg-white hover:shadow-md px-5 py-4 border border-neutral-200 rounded-xl transition"
          >
            <span class="font-medium text-neutral-800"
              >Reparaciones (fibra, cemento, caños pinchados)</span
            >
            <span aria-hidden="true" class="text-neutral-400">
              <MoveRightIcon class="w-5 h-5" />
            </span>
          </a>
        </li>
        <li class="sm:col-span-2 lg:col-span-3">
          <a
            href="/servicios/desagote"
            class="flex justify-between items-center bg-white hover:shadow-md px-5 py-4 border border-neutral-200 rounded-xl transition"
          >
            <span class="font-medium text-neutral-800">Desagote</span>
            <span aria-hidden="true" class="text-neutral-400">
              <MoveRightIcon class="w-5 h-5" />
            </span>
          </a>
        </li>
      </ul>
    </section>

    <!-- Contacto -->
    <section class="mx-auto px-6 pb-20 container" aria-labelledby="contacto-h2">
      <div
        class="relative bg-gradient-to-br from-blue-700 via-blue-600 to-blue-500 shadow-xl p-10 md:p-14 rounded-3xl text-white"
      >
        <header>
          <h2 id="contacto-h2" class="font-bold text-3xl md:text-4xl">
            ¿Necesitás ayuda? Contactanos
          </h2>
          <p class="mt-3 max-w-prose text-blue-50 text-base md:text-lg">
            Escribinos por WhatsApp y te respondemos a la brevedad. Brindamos
            atención personalizada para que coordines tu mantenimiento con total
            comodidad.
          </p>
        </header>

        <div
          class="flex sm:flex-row flex-col flex-wrap gap-4 mt-8 w-full md:w-auto"
        >
          <a
            href={`mailto:${PAGE.email}`}
            class="inline-flex justify-center items-center hover:bg-white/10 px-6 py-3 border border-white/70 rounded-full w-full sm:w-auto font-medium text-white transition"
          >
            Enviar correo
            <MoveUpRightIcon class="ml-2 w-5 h-5" />
          </a>
          <a
            href={mkWsp(
              "Hola! Quiero coordinar una visita para mantenimiento de piscina."
            )}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex justify-center items-center bg-white hover:bg-blue-50 shadow-md px-6 py-3 rounded-full w-full sm:w-auto font-semibold text-blue-700 transition"
          >
            WhatsApp
            <MoveRightIcon class="ml-2 w-5 h-5" />
          </a>
          <a
            href={`tel:${PAGE.phone.replace(/\s+/g, "")}`}
            class="sm:hidden inline-flex justify-center items-center hover:bg-white/10 px-6 py-3 border border-white/70 rounded-full w-full sm:w-auto font-medium text-white transition"
          >
            Llamar
            <MoveRightIcon class="ml-2 w-5 h-5" />
          </a>
        </div>

        <address
          class="gap-6 grid sm:grid-cols-3 mt-10 text-blue-50/90 text-sm md:text-base not-italic"
        >
          <div>
            <h3 class="font-semibold text-white text-base">Cobertura</h3>
            <p>Consultá por el radio de cobertura de tu zona.</p>
          </div>
          <div>
            <h3 class="font-semibold text-white text-base">Contacto</h3>
            <p class="flex flex-col">
              <a
                class="hover:text-white underline underline-offset-2"
                href={`mailto:${PAGE.email}`}>{PAGE.email}</a
              >
              <a
                class="hover:text-white underline underline-offset-2"
                href={`tel:${PAGE.phone.replace(/\s+/g, "")}`}>{PAGE.phone}</a
              >
            </p>
          </div>
          <div>
            <h3 class="font-semibold text-white text-base">Horario</h3>
            <p>Lunes a sábado · 7 a 16 hs</p>
          </div>
        </address>
      </div>
    </section>
  </main>

  <!-- Footer -->
  <footer class="bg-neutral-50 border-neutral-200 border-t">
    <div
      class="space-y-1 mx-auto px-6 py-8 text-neutral-500 text-sm text-center container"
    >
      <small
        >&copy; {new Date().getFullYear()} Master Piscinas — {PAGE.area}</small
      >
      <p>
        Desarrollado por
        <a
          href="https://imeatara.com"
          target="_blank"
          rel="noopener"
          class="font-medium text-neutral-600 hover:text-neutral-800"
        >
          Imeatara
        </a>
      </p>
    </div>
  </footer>
</Layout>
