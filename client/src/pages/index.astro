---
import { Image } from "astro:assets";
import Layout from "../layouts/Layout.astro";
import pabloImage from "@/assets/pablo.webp";
import whatsappIcon from "@/assets/whatsapp.svg";

/* Imágenes de cada servicio (cambiá rutas si hace falta) */
import limpiezaAcidoImg from "@/assets/asset.png";
import desagoteImg from "@/assets/asset.png";
import pinturaImg from "@/assets/asset.png";
import cambioPiedrasImg from "@/assets/asset.png";
import pulidoImg from "@/assets/asset.png";
import reparacionFibraImg from "@/assets/asset.png";
import mantenimientoImg from "@/assets/asset.png";
import balanceQuimicoImg from "@/assets/asset.png";

import { MoveRightIcon, PlusIcon } from "lucide-react";

import SpeedDial from "../components/SpeedDial.astro";

// Helpers
const WSP = "5492644822296";
const mkWsp = (msg) => `https://wa.me/${WSP}?text=${encodeURIComponent(msg)}`;

const PAGE = {
  title:
    "Master Piscinas | Limpieza, desagote, pintura y mantenimiento de piletas en San Juan",
  description:
    "Servicio profesional de mantenimiento de piscinas en San Juan: limpieza con ácido, desagote, pintura, cambio de piedras/multiválvula, pulido y reparaciones en fibra. Presupuesto sin cargo.",
  url: "https://masterpiscinassj.com/",
  phone: "+54 9 264 482 2296",
  email: "masterpiscinas.sj@gmail.com",
  area: "San Juan, Argentina",
};
---

<Layout title={PAGE.title} description={PAGE.description}>
  <!-- HERO -->
  <header
    class="relative bg-gradient-to-b from-neutral-500 to-neutral-50 py-16 md:py-24 overflow-hidden text-center"
  >
    <div
      class="absolute inset-0 bg-[radial-gradient(#0001_1px,transparent_1px)] pointer-events-none [background-size:16px_16px]"
    >
    </div>

    <div class="mx-auto px-6 container">
      <div class="place-items-center grid">
        <Image
          src="/favicon.webp"
          alt="Master Piscinas - Logo"
          width="200"
          height="100"
          class="brightness-125"
        />
      </div>

      <p
        class="inline-block bg-blue-700 mt-4 px-3 py-1 rounded-full font-medium text-white text-xs tracking-wide"
      >
        +14 años de experiencia
      </p>

      <h1
        class="drop-shadow mt-4 font-bold text-blue-700 text-4xl md:text-6xl italic leading-tight"
      >
        Mantenimiento integral de piscinas
      </h1>

      <p class="mt-4 text-slate-700">
        Limpieza con ácido, desagote, pintura y reparaciones. Atención personal
        y presupuesto sin cargo.
      </p>

      <p class="sr-only">
        Servicios de Master Piscinas en {PAGE.area}: limpieza, desagote,
        pintura, cambio de piedras/multiválvula, pulido y reparaciones en fibra.
      </p>
    </div>
  </header>
</Layout>

<main id="contenido" class="bg-neutral-50">
  <!-- SERVICIOS -->
  <section class="mx-auto px-6 py-16 container" aria-labelledby="servicios-h2">
    <header class="mb-12 text-center">
      <h2
        id="servicios-h2"
        class="font-bold text-slate-900 text-2xl md:text-3xl"
      >
        Nuestros servicios
      </h2>
      <p class="mt-2 text-slate-600">
        Soluciones profesionales para que tu pileta quede impecable.
      </p>
    </header>

    <div class="gap-6 grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3">
      <!-- Limpieza con ácido -->
      <article
        class="flex flex-col bg-white shadow hover:shadow-lg rounded-xl overflow-hidden transition"
      >
        <a
          href="/servicios/limpieza-acido"
          aria-label="Ver más sobre Limpieza con ácido"
        >
          <Image
            src={limpiezaAcidoImg}
            alt="Limpieza con ácido en pileta"
            class="w-full h-48 object-cover hover:scale-105 transition-transform duration-300"
          />
        </a>
        <div class="flex flex-col flex-1 justify-between p-5">
          <div>
            <h3 class="font-semibold text-slate-900 text-lg">
              <a href="/servicios/limpieza-acido" class="hover:underline"
                >Limpieza con ácido</a
              >
            </h3>
            <p class="mt-1 text-slate-600 text-sm">
              Restauración de superficies con incrustaciones, algas o manchas.
            </p>
          </div>
          <nav class="flex gap-3 mt-4">
            <a
              href="/servicios/limpieza-acido"
              class="inline-flex justify-center items-center hover:bg-slate-50 px-4 py-2 border border-slate-300 rounded-full text-slate-800 text-sm transition"
            >
              Más info
            </a>
            <a
              href={mkWsp(
                "Hola! Quiero solicitar el servicio de Limpieza con ácido"
              )}
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex justify-center items-center bg-blue-600 hover:bg-blue-700 px-4 py-2 rounded-full font-semibold text-white text-sm transition"
            >
              Solicitar
            </a>
          </nav>
        </div>
      </article>

      <!-- Desagote -->
      <article
        class="flex flex-col bg-white shadow hover:shadow-lg rounded-xl overflow-hidden transition"
      >
        <a href="/servicios/desagote" aria-label="Ver más sobre Desagote">
          <Image
            src={desagoteImg}
            alt="Desagote y bombeo de piscina"
            class="w-full h-48 object-cover hover:scale-105 transition-transform duration-300"
          />
        </a>
        <div class="flex flex-col flex-1 justify-between p-5">
          <div>
            <h3 class="font-semibold text-slate-900 text-lg">
              <a href="/servicios/desagote" class="hover:underline">Desagote</a>
            </h3>
            <p class="mt-1 text-slate-600 text-sm">
              Vaciado seguro y puesta a punto posterior.
            </p>
          </div>
          <nav class="flex gap-3 mt-4">
            <a
              href="/servicios/desagote"
              class="inline-flex justify-center items-center hover:bg-slate-50 px-4 py-2 border border-slate-300 rounded-full text-slate-800 text-sm transition"
            >
              Más info
            </a>
            <a
              href={mkWsp("Hola! Quiero solicitar el servicio de Desagote")}
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex justify-center items-center bg-blue-600 hover:bg-blue-700 px-4 py-2 rounded-full font-semibold text-white text-sm transition"
            >
              Solicitar
            </a>
          </nav>
        </div>
      </article>

      <!-- Pintura -->
      <article
        class="flex flex-col bg-white shadow hover:shadow-lg rounded-xl overflow-hidden transition"
      >
        <a href="/servicios/pintura" aria-label="Ver más sobre Pintura">
          <Image
            src={pinturaImg}
            alt="Pintura de piscina con rodillo"
            class="w-full h-48 object-cover hover:scale-105 transition-transform duration-300"
          />
        </a>
        <div class="flex flex-col flex-1 justify-between p-5">
          <div>
            <h3 class="font-semibold text-slate-900 text-lg">
              <a href="/servicios/pintura" class="hover:underline">Pintura</a>
            </h3>
            <p class="mt-1 text-slate-600 text-sm">
              Sellado, preparación y aplicación según tipo de pileta.
            </p>
          </div>
          <nav class="flex gap-3 mt-4">
            <a
              href="/servicios/pintura"
              class="inline-flex justify-center items-center hover:bg-slate-50 px-4 py-2 border border-slate-300 rounded-full text-slate-800 text-sm transition"
            >
              Más info
            </a>
            <a
              href={mkWsp("Hola! Quiero solicitar el servicio de Pintura")}
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex justify-center items-center bg-blue-600 hover:bg-blue-700 px-4 py-2 rounded-full font-semibold text-white text-sm transition"
            >
              Solicitar
            </a>
          </nav>
        </div>
      </article>

      <!-- Cambio de piedras / Multiválvula -->
      <article
        class="flex flex-col bg-white shadow hover:shadow-lg rounded-xl overflow-hidden transition"
      >
        <a
          href="/servicios/cambio-piedras-multivalvula"
          aria-label="Ver más sobre Cambio de piedras / Multiválvula"
        >
          <Image
            src={cambioPiedrasImg}
            alt="Cambio de piedras y multiválvula en filtro"
            class="w-full h-48 object-cover hover:scale-105 transition-transform duration-300"
          />
        </a>
        <div class="flex flex-col flex-1 justify-between p-5">
          <div>
            <h3 class="font-semibold text-slate-900 text-lg">
              <a
                href="/servicios/cambio-piedras-multivalvula"
                class="hover:underline"
              >
                Cambio de piedras / Multiválvula
              </a>
            </h3>
            <p class="mt-1 text-slate-600 text-sm">
              Reemplazo del medio filtrante y mantenimiento de válvula
              selectora.
            </p>
          </div>
          <nav class="flex gap-3 mt-4">
            <a
              href="/servicios/cambio-piedras-multivalvula"
              class="inline-flex justify-center items-center hover:bg-slate-50 px-4 py-2 border border-slate-300 rounded-full text-slate-800 text-sm transition"
            >
              Más info
            </a>
            <a
              href={mkWsp(
                "Hola! Quiero solicitar el servicio de Cambio de piedras / Multiválvula"
              )}
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex justify-center items-center bg-blue-600 hover:bg-blue-700 px-4 py-2 rounded-full font-semibold text-white text-sm transition"
            >
              Solicitar
            </a>
          </nav>
        </div>
      </article>

      <!-- Pulido de placas -->
      <article
        class="flex flex-col bg-white shadow hover:shadow-lg rounded-xl overflow-hidden transition"
      >
        <a
          href="/servicios/pulido-placas"
          aria-label="Ver más sobre Pulido de placas"
        >
          <Image
            src={pulidoImg}
            alt="Pulido de placas de piscina"
            class="w-full h-48 object-cover hover:scale-105 transition-transform duration-300"
          />
        </a>
        <div class="flex flex-col flex-1 justify-between p-5">
          <div>
            <h3 class="font-semibold text-slate-900 text-lg">
              <a href="/servicios/pulido-placas" class="hover:underline"
                >Pulido de placas</a
              >
            </h3>
            <p class="mt-1 text-slate-600 text-sm">
              Recuperación de brillo, limpieza profunda y renovación del
              acabado.
            </p>
          </div>
          <nav class="flex gap-3 mt-4">
            <a
              href="/servicios/pulido-placas"
              class="inline-flex justify-center items-center hover:bg-slate-50 px-4 py-2 border border-slate-300 rounded-full text-slate-800 text-sm transition"
            >
              Más info
            </a>
            <a
              href={mkWsp(
                "Hola! Quiero solicitar el servicio de Pulido de placas"
              )}
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex justify-center items-center bg-blue-600 hover:bg-blue-700 px-4 py-2 rounded-full font-semibold text-white text-sm transition"
            >
              Solicitar
            </a>
          </nav>
        </div>
      </article>

      <!-- Reparación en piletas de fibra / Parches -->
      <article
        class="flex flex-col bg-white shadow hover:shadow-lg rounded-xl overflow-hidden transition"
      >
        <a
          href="/servicios/reparacion-fibra"
          aria-label="Ver más sobre Reparaciones en fibra"
        >
          <Image
            src={reparacionFibraImg}
            alt="Reparaciones en piletas de fibra de vidrio"
            class="w-full h-48 object-cover hover:scale-105 transition-transform duration-300"
          />
        </a>
        <div class="flex flex-col flex-1 justify-between p-5">
          <div>
            <h3 class="font-semibold text-slate-900 text-lg">
              <a href="/servicios/reparacion-fibra" class="hover:underline">
                Reparación en piletas de fibra / Parches
              </a>
            </h3>
            <p class="mt-1 text-slate-600 text-sm">
              Solución de fisuras, burbujas y parches en piletas de fibra.
            </p>
          </div>
          <nav class="flex gap-3 mt-4">
            <a
              href="/servicios/reparacion-fibra"
              class="inline-flex justify-center items-center hover:bg-slate-50 px-4 py-2 border border-slate-300 rounded-full text-slate-800 text-sm transition"
            >
              Más info
            </a>
            <a
              href={mkWsp(
                "Hola! Quiero solicitar el servicio de Reparación en piletas de fibra / Parches"
              )}
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex justify-center items-center bg-blue-600 hover:bg-blue-700 px-4 py-2 rounded-full font-semibold text-white text-sm transition"
            >
              Solicitar
            </a>
          </nav>
        </div>
      </article>
      <!-- CTA: ¿No sabés qué servicio necesitás? (estilo igual al CTA de Contacto) -->
      <article
        class="relative sm:col-span-2 lg:col-span-3 bg-gradient-to-br from-blue-700 via-blue-600 to-blue-500 shadow-xl p-10 md:p-14 rounded-3xl text-white text-center"
      >
        <header>
          <h3 class="font-bold text-3xl md:text-4xl">
            ¿No sabés qué servicio necesitás?
          </h3>
          <p class="mx-auto mt-3 max-w-prose text-blue-50 text-base md:text-lg">
            Contanos tu caso y te orientamos sin compromiso.
          </p>
        </header>

        <div class="flex flex-wrap justify-center items-center gap-4 mt-8">
          <a
            href={mkWsp(
              "Hola! Necesito asesoramiento para elegir el servicio adecuado para mi pileta."
            )}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex justify-center items-center bg-white hover:bg-blue-50 shadow-md px-6 py-3 rounded-full font-semibold text-blue-700 transition"
            aria-label="Consultar por WhatsApp"
          >
            Consultar por WhatsApp
          </a>
          <a
            href="/servicios"
            class="inline-flex justify-center items-center hover:bg-white/10 px-6 py-3 border border-white/70 rounded-full font-medium text-white transition"
          >
            Ver todos los servicios
          </a>
        </div>
      </article>
    </div>
  </section>

  <!-- ACERCA -->
  <section class="bg-neutral-100 py-20" aria-labelledby="acerca-h2">
    <div class="items-center gap-12 grid md:grid-cols-2 mx-auto px-6 container">
      <div>
        <header class="space-y-2">
          <h2
            id="acerca-h2"
            class="font-bold text-slate-900 text-3xl md:text-4xl"
          >
            Acerca de Pablo
          </h2>
          <p class="font-semibold text-lg md:text-xl">
            Más de 14 años de experiencia en mantenimiento de piscinas
          </p>
        </header>

        <p class="mt-4 text-slate-700 leading-relaxed">
          Mi nombre es <strong>Pablo Martínez</strong>. Desde 2010 brindamos
          servicios profesionales de mantenimiento de piscinas. Nuestro
          compromiso es con la <strong>responsabilidad</strong>, <strong
            >puntualidad</strong
          > y <strong>prolijidad</strong> — para que disfrutes tu pileta con tranquilidad.
        </p>

        <ul class="space-y-1 mt-4 text-slate-700">
          <li class="flex items-start gap-2">
            <span class="text-sky-600">•</span> Presupuesto sin cargo y respuesta
            rápida
          </li>
          <li class="flex items-start gap-2">
            <span class="text-sky-600">•</span> Visitas pactadas y seguimiento post-servicio
          </li>
          <li class="flex items-start gap-2">
            <span class="text-sky-600">•</span> Consultá la cobertura según tu zona
          </li>
        </ul>
      </div>

      <figure
        class="relative shadow-lg mx-auto rounded-2xl ring-1 ring-sky-200/70 w-full max-w-sm overflow-hidden"
      >
        <Image
          src={pabloImage}
          alt="Pablo Martínez, especialista en mantenimiento de piscinas"
          width="500"
          height="500"
          class="w-full object-cover aspect-square"
          style={{ objectPosition: "right bottom" }}
        />
        <figcaption
          class="bg-white/90 backdrop-blur-sm px-4 py-3 text-slate-600 text-sm text-center"
        >
          Pablo Martínez — Especialista en mantenimiento de piscinas
        </figcaption>
      </figure>
    </div>
  </section>

  <!-- PROCESO -->
  <section class="mx-auto px-6 py-16 container" aria-labelledby="proceso-h2">
    <header class="mb-8 text-center">
      <h2 id="proceso-h2" class="font-bold text-slate-900 text-2xl md:text-3xl">
        Así trabajamos
      </h2>
      <p class="mt-2 text-slate-600">
        Proceso simple y claro para resultados confiables.
      </p>
    </header>

    <ol class="gap-6 grid md:grid-cols-4">
      {
        [
          [
            "Paso 1: Consulta y visita",
            "Relevamiento del estado del agua y equipos.",
          ],
          ["Paso 2: Presupuesto", "Propuesta clara con tareas y materiales."],
          [
            "Paso 3: Trabajo en la pileta",
            "Limpieza, balance, pintura o reparación.",
          ],
          ["Paso 4: Seguimiento", "Reporte con fotos y recomendaciones."],
        ].map(([t, d], i) => (
          <li>
            <article class="bg-white shadow-sm rounded-xl ring-1 ring-slate-200/70 h-full">
              <div class="flex items-center gap-3 px-5 py-4 border-slate-100 border-b">
                <span class="inline-flex justify-center items-center bg-blue-600 rounded-full w-8 h-8 font-bold text-white text-sm">
                  {i + 1}
                </span>
                <h3 class="font-semibold text-slate-900">{t}</h3>
              </div>
              <p class="px-5 py-4 text-slate-700">{d}</p>
            </article>
          </li>
        ))
      }
    </ol>
  </section>

  <!-- OPINIONES -->
  <section class="mx-auto px-6 py-16 container" aria-labelledby="opiniones-h2">
    <header class="mb-8 text-center">
      <h2
        id="opiniones-h2"
        class="font-bold text-slate-900 text-2xl md:text-3xl"
      >
        Lo que dicen nuestros clientes
      </h2>
      <p class="mt-2 text-slate-600">
        Opiniones reales de quienes confiaron en nosotros.
        <a
          href="https://www.google.com/maps/search/?api=1&query=Master%20Piscinas%20San%20Juan"
          class="hover:text-sky-700 underline transition"
          target="_blank"
          rel="noopener">Ver en Google Maps</a
        >
      </p>
    </header>

    <ul class="gap-6 grid md:grid-cols-3">
      <li>
        <article
          class="flex flex-col justify-between bg-white shadow-sm hover:shadow-lg p-6 rounded-2xl ring-1 ring-slate-200/70 h-full transition"
        >
          <div
            class="flex items-center gap-1 text-amber-500"
            aria-label="5 de 5 estrellas"
          >
            {
              Array.from({ length: 5 }).map(() => (
                <svg viewBox="0 0 20 20" class="w-5 h-5" aria-hidden="true">
                  <path
                    d="M10 1.5 12.6 7l6 .5-4.6 3.8 1.5 5.8L10 14.9 4.5 17l1.5-5.8L1.5 7.5l6-.5L10 1.5z"
                    fill="currentColor"
                  />
                </svg>
              ))
            }
          </div>
          <blockquote class="mt-3 text-slate-700 text-sm leading-relaxed">
            “Excelente trabajo. Dejaron la pileta impecable y cumplieron con la
            fecha.”
          </blockquote>
          <footer class="mt-4 text-slate-500 text-xs">
            Lucía R. · Rivadavia
          </footer>
        </article>
      </li>

      <li>
        <article
          class="flex flex-col justify-between bg-white shadow-sm hover:shadow-lg p-6 rounded-2xl ring-1 ring-slate-200/70 h-full transition"
        >
          <div
            class="flex items-center gap-1 text-amber-500"
            aria-label="5 de 5 estrellas"
          >
            {
              Array.from({ length: 5 }).map(() => (
                <svg viewBox="0 0 20 20" class="w-5 h-5" aria-hidden="true">
                  <path
                    d="M10 1.5 12.6 7l6 .5-4.6 3.8 1.5 5.8L10 14.9 4.5 17l1.5-5.8L1.5 7.5l6-.5L10 1.5z"
                    fill="currentColor"
                  />
                </svg>
              ))
            }
          </div>
          <blockquote class="mt-3 text-slate-700 text-sm leading-relaxed">
            “Muy buena comunicación por WhatsApp y precios claros.
            Recomendados.”
          </blockquote>
          <footer class="mt-4 text-slate-500 text-xs">
            Gabriel M. · Rawson
          </footer>
        </article>
      </li>

      <li>
        <article
          class="flex flex-col justify-between bg-white shadow-sm hover:shadow-lg p-6 rounded-2xl ring-1 ring-slate-200/70 h-full transition"
        >
          <div
            class="flex items-center gap-1 text-amber-500"
            aria-label="4 de 5 estrellas"
          >
            {
              [...Array(4)].map(() => (
                <svg viewBox="0 0 20 20" class="w-5 h-5" aria-hidden="true">
                  <path
                    d="M10 1.5 12.6 7l6 .5-4.6 3.8 1.5 5.8L10 14.9 4.5 17l1.5-5.8L1.5 7.5l6-.5L10 1.5z"
                    fill="currentColor"
                  />
                </svg>
              ))
            }
            <svg
              viewBox="0 0 20 20"
              class="w-5 h-5 text-amber-300"
              aria-hidden="true"
            >
              <path
                d="M10 1.5 12.6 7l6 .5-4.6 3.8 1.5 5.8L10 14.9 4.5 17l1.5-5.8L1.5 7.5l6-.5L10 1.5z"
                fill="currentColor"
                opacity="0.4"></path>
            </svg>
          </div>
          <blockquote class="mt-3 text-slate-700 text-sm leading-relaxed">
            “Hicieron limpieza con ácido y pintura, quedó como nueva.”
          </blockquote>
          <footer class="mt-4 text-slate-500 text-xs">
            Mariana P. · Capital
          </footer>
        </article>
      </li>
    </ul>
  </section>

  <!-- CONTACTO -->
  <section class="mx-auto px-6 pb-20 container" aria-labelledby="contacto-h2">
    <div
      class="relative bg-gradient-to-br from-blue-700 via-blue-600 to-blue-500 shadow-xl p-10 md:p-14 rounded-3xl text-white"
    >
      <header>
        <h2 id="contacto-h2" class="font-bold text-3xl md:text-4xl">
          Coordiná tu visita
        </h2>
        <p class="mt-3 max-w-prose text-blue-50 text-base md:text-lg">
          Escribinos por WhatsApp y te respondemos a la brevedad. Brindamos
          atención personalizada para que coordines tu mantenimiento con total
          comodidad.
        </p>
      </header>

      <div class="flex flex-wrap items-center gap-4 mt-8">
        <a
          href={`mailto:${PAGE.email}`}
          class="inline-flex justify-center items-center hover:bg-white/10 px-6 py-3 border border-white/70 rounded-full font-medium text-white transition"
        >
          Enviar correo
        </a>
        <a
          href={mkWsp(
            "Hola! Quiero coordinar una visita para mantenimiento de piscina."
          )}
