---
import Layout from "../../layouts/Layout.astro";
import { Image } from "astro:assets";
import { Plus, MoveRight, MoveLeft } from "@lucide/astro";

// Imágenes (ajustá las rutas a tus assets reales)
import mantenimientoImg from "@/assets/asset.png";
import limpiezaAcidoImg from "@/assets/asset.png";
import pinturaImg from "@/assets/asset.png";
import dobleFiltradoImg from "@/assets/asset.png";
import cambioPiedrasImg from "@/assets/asset.png";
import pulidoImg from "@/assets/asset.png";
import reparacionFibraImg from "@/assets/asset.png";
import desagoteImg from "@/assets/asset.png";

// Helper para WhatsApp
const WSP = "5492644822296";
const mkWsp = (text) => `https://wa.me/${WSP}?text=${encodeURIComponent(text)}`;
---

<Layout
  title="Servicios"
  description="Soluciones profesionales para que tu pileta quede impecable."
>
  <section class="mx-auto px-6 py-16 container" aria-labelledby="servicios-h2">
    <!-- Botón Volver -->
    <nav class="flex justify-start items-center mb-10">
      <a
        href="javascript:history.back()"
        aria-label="Volver"
        class="inline-flex items-center gap-2 bg-neutral-100 hover:bg-neutral-200 px-4 py-2 rounded-full font-medium text-neutral-800 transition-colors"
      >
        <MoveLeft class="w-5 h-5" />
        <span>Volver</span>
      </a>
    </nav>

    <header class="mb-12 text-center">
      <h2
        id="servicios-h2"
        class="font-bold text-neutral-900 text-2xl md:text-3xl"
      >
        Nuestros servicios
      </h2>
      <p class="mt-2 text-neutral-600">
        Soluciones profesionales para que tu pileta quede impecable.
      </p>
    </header>

    <div class="gap-6 grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3">
      <!-- Mantenimiento -->
      <article
        class="group relative bg-white shadow hover:shadow-lg rounded-2xl ring-1 ring-neutral-200 aspect-square overflow-hidden transition"
      >
        <a
          href="/servicios/mantenimiento"
          aria-label="Ver más sobre Mantenimiento"
          class="absolute inset-0"
        >
          <Image
            src={mantenimientoImg}
            alt="Mantenimiento de piscina"
            class="absolute inset-0 w-full h-full object-cover"
          />
          <div
            class="absolute inset-0 bg-gradient-to-t from-black/60 via-black/20 to-transparent"
          >
          </div>
        </a>
        <div
          class="bottom-0 absolute inset-x-0 p-5 text-white pointer-events-none"
        >
          <h3 class="font-semibold text-lg">Mantenimiento</h3>
          <p class="mt-1 text-white/80 text-sm">
            Limpieza, balance químico y verificación del filtrado.
          </p>
          <div class="flex gap-3 mt-4">
            <a
              href="/servicios/mantenimiento"
              class="inline-flex items-center hover:bg-white/10 backdrop-blur px-4 py-2 border border-white/70 rounded-full text-sm pointer-events-auto"
            >
              <Plus class="mr-2 w-5 h-5" /> Más info
            </a>
            <a
              href={mkWsp(
                "Hola! Quiero solicitar el servicio de Mantenimiento"
              )}
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center bg-blue-600 hover:bg-blue-700 px-4 py-2 rounded-full font-semibold text-white text-sm transition pointer-events-auto"
            >
              Solicitar <MoveRight class="ml-2 w-5 h-5" />
            </a>
          </div>
        </div>
      </article>

      <!-- Limpieza con ácido -->
      <article
        class="group relative bg-white shadow hover:shadow-lg rounded-2xl ring-1 ring-neutral-200 aspect-square overflow-hidden transition"
      >
        <a
          href="/servicios/limpieza-acido"
          aria-label="Ver más sobre Limpieza con ácido"
          class="absolute inset-0"
        >
          <Image
            src={limpiezaAcidoImg}
            alt="Limpieza con ácido en pileta"
            class="absolute inset-0 w-full h-full object-cover"
          />
          <div
            class="absolute inset-0 bg-gradient-to-t from-black/60 via-black/20 to-transparent"
          >
          </div>
        </a>
        <div
          class="bottom-0 absolute inset-x-0 p-5 text-white pointer-events-none"
        >
          <h3 class="font-semibold text-lg">Limpieza con ácido</h3>
          <p class="mt-1 text-white/80 text-sm">
            Remoción de sarro, algas y manchas.
          </p>
          <div class="flex gap-3 mt-4">
            <a
              href="/servicios/limpieza-acido"
              class="inline-flex items-center hover:bg-white/10 backdrop-blur px-4 py-2 border border-white/70 rounded-full text-sm pointer-events-auto"
            >
              <Plus class="mr-2 w-5 h-5" /> Más info
            </a>
            <a
              href={mkWsp(
                "Hola! Quiero solicitar el servicio de Limpieza con ácido"
              )}
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center bg-blue-600 hover:bg-blue-700 px-4 py-2 rounded-full font-semibold text-white text-sm transition pointer-events-auto"
            >
              Solicitar <MoveRight class="ml-2 w-5 h-5" />
            </a>
          </div>
        </div>
      </article>

      <!-- Pintura -->
      <article
        class="group relative bg-white shadow hover:shadow-lg rounded-2xl ring-1 ring-neutral-200 aspect-square overflow-hidden transition"
      >
        <a
          href="/servicios/pintura"
          aria-label="Ver más sobre Pintura"
          class="absolute inset-0"
        >
          <Image
            src={pinturaImg}
            alt="Pintura de piscina con rodillo"
            class="absolute inset-0 w-full h-full object-cover"
          />
          <div
            class="absolute inset-0 bg-gradient-to-t from-black/60 via-black/20 to-transparent"
          >
          </div>
        </a>
        <div
          class="bottom-0 absolute inset-x-0 p-5 text-white pointer-events-none"
        >
          <h3 class="font-semibold text-lg">Pintura</h3>
          <p class="mt-1 text-white/80 text-sm">
            Preparación, triple lavado y aplicación.
          </p>
          <div class="flex gap-3 mt-4">
            <a
              href="/servicios/pintura"
              class="inline-flex items-center hover:bg-white/10 backdrop-blur px-4 py-2 border border-white/70 rounded-full text-sm pointer-events-auto"
            >
              <Plus class="mr-2 w-5 h-5" /> Más info
            </a>
            <a
              href={mkWsp("Hola! Quiero solicitar el servicio de Pintura")}
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center bg-blue-600 hover:bg-blue-700 px-4 py-2 rounded-full font-semibold text-white text-sm transition pointer-events-auto"
            >
              Solicitar <MoveRight class="ml-2 w-5 h-5" />
            </a>
          </div>
        </div>
      </article>

      <!-- Doble filtrado -->
      <article
        class="group relative bg-white shadow hover:shadow-lg rounded-2xl ring-1 ring-neutral-200 aspect-square overflow-hidden transition"
      >
        <a
          href="/servicios/doble-filtrado"
          aria-label="Ver más sobre Doble filtrado"
          class="absolute inset-0"
        >
          <Image
            src={dobleFiltradoImg}
            alt="Doble filtrado en sala de máquinas"
            class="absolute inset-0 w-full h-full object-cover"
          />
          <div
            class="absolute inset-0 bg-gradient-to-t from-black/60 via-black/20 to-transparent"
          >
          </div>
        </a>
        <div
          class="bottom-0 absolute inset-x-0 p-5 text-white pointer-events-none"
        >
          <h3 class="font-semibold text-lg">
            Implementación/adaptación de doble filtrado
          </h3>
          <p class="mt-1 text-white/80 text-sm">
            Mayor caudal, claridad y redundancia.
          </p>
          <div class="flex gap-3 mt-4">
            <a
              href="/servicios/doble-filtrado"
              class="inline-flex items-center hover:bg-white/10 backdrop-blur px-4 py-2 border border-white/70 rounded-full text-sm pointer-events-auto"
            >
              <Plus class="mr-2 w-5 h-5" /> Más info
            </a>
            <a
              href={mkWsp(
                "Hola! Quiero solicitar el servicio de Doble filtrado"
              )}
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center bg-blue-600 hover:bg-blue-700 px-4 py-2 rounded-full font-semibold text-white text-sm transition pointer-events-auto"
            >
              Solicitar <MoveRight class="ml-2 w-5 h-5" />
            </a>
          </div>
        </div>
      </article>

      <!-- Cambio de piedras -->
      <article
        class="group relative bg-white shadow hover:shadow-lg rounded-2xl ring-1 ring-neutral-200 aspect-square overflow-hidden transition"
      >
        <a
          href="/servicios/cambio-piedras-multivalvula"
          aria-label="Ver más sobre Cambio de piedras"
          class="absolute inset-0"
        >
          <Image
            src={cambioPiedrasImg}
            alt="Cambio de piedras y multiválvula en filtro"
            class="absolute inset-0 w-full h-full object-cover"
          />
          <div
            class="absolute inset-0 bg-gradient-to-t from-black/60 via-black/20 to-transparent"
          >
          </div>
        </a>
        <div
          class="bottom-0 absolute inset-x-0 p-5 text-white pointer-events-none"
        >
          <h3 class="font-semibold text-lg">
            Cambio de piedras / Multiválvula
          </h3>
          <p class="mt-1 text-white/80 text-sm">
            Medio filtrante y service de válvula selectora.
          </p>
          <div class="flex gap-3 mt-4">
            <a
              href="/servicios/cambio-piedras-multivalvula"
              class="inline-flex items-center hover:bg-white/10 backdrop-blur px-4 py-2 border border-white/70 rounded-full text-sm pointer-events-auto"
            >
              <Plus class="mr-2 w-5 h-5" /> Más info
            </a>
            <a
              href={mkWsp(
                "Hola! Quiero solicitar el servicio de Cambio de piedras / Multiválvula"
              )}
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center bg-blue-600 hover:bg-blue-700 px-4 py-2 rounded-full font-semibold text-white text-sm transition pointer-events-auto"
            >
              Solicitar <MoveRight class="ml-2 w-5 h-5" />
            </a>
          </div>
        </div>
      </article>

      <!-- Pulido -->
      <article
        class="group relative bg-white shadow hover:shadow-lg rounded-2xl ring-1 ring-neutral-200 aspect-square overflow-hidden transition"
      >
        <a
          href="/servicios/pulido-placas"
          aria-label="Ver más sobre Pulido"
          class="absolute inset-0"
        >
          <Image
            src={pulidoImg}
            alt="Pulido de placas de piscina"
            class="absolute inset-0 w-full h-full object-cover"
          />
          <div
            class="absolute inset-0 bg-gradient-to-t from-black/60 via-black/20 to-transparent"
          >
          </div>
        </a>
        <div
          class="bottom-0 absolute inset-x-0 p-5 text-white pointer-events-none"
        >
          <h3 class="font-semibold text-lg">Pulido de placas</h3>
          <p class="mt-1 text-white/80 text-sm">
            Recupera textura, estética y estado atérmico.
          </p>
          <div class="flex gap-3 mt-4">
            <a
              href="/servicios/pulido-placas"
              class="inline-flex items-center hover:bg-white/10 backdrop-blur px-4 py-2 border border-white/70 rounded-full text-sm pointer-events-auto"
            >
              <Plus class="mr-2 w-5 h-5" /> Más info
            </a>
            <a
              href={mkWsp(
                "Hola! Quiero solicitar el servicio de Pulido de placas"
              )}
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center bg-blue-600 hover:bg-blue-700 px-4 py-2 rounded-full font-semibold text-white text-sm transition pointer-events-auto"
            >
              Solicitar <MoveRight class="ml-2 w-5 h-5" />
            </a>
          </div>
        </div>
      </article>

      <!-- Reparaciones -->
      <article
        class="group relative bg-white shadow hover:shadow-lg rounded-2xl ring-1 ring-neutral-200 aspect-square overflow-hidden transition"
      >
        <a
          href="/servicios/reparaciones"
          aria-label="Ver más sobre Reparaciones"
          class="absolute inset-0"
        >
          <Image
            src={reparacionFibraImg}
            alt="Reparaciones en piletas de fibra y cemento"
            class="absolute inset-0 w-full h-full object-cover"
          />
          <div
            class="absolute inset-0 bg-gradient-to-t from-black/60 via-black/20 to-transparent"
          >
          </div>
        </a>
        <div
          class="bottom-0 absolute inset-x-0 p-5 text-white pointer-events-none"
        >
          <h3 class="font-semibold text-lg">Reparaciones</h3>
          <p class="mt-1 text-white/80 text-sm">
            Fibra, material y caños. Parches y refuerzos.
          </p>
          <div class="flex gap-3 mt-4">
            <a
              href="/servicios/reparaciones"
              class="inline-flex items-center hover:bg-white/10 backdrop-blur px-4 py-2 border border-white/70 rounded-full text-sm pointer-events-auto"
            >
              <Plus class="mr-2 w-5 h-5" /> Más info
            </a>
            <a
              href={mkWsp("Hola! Quiero solicitar el servicio de Reparaciones")}
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center bg-blue-600 hover:bg-blue-700 px-4 py-2 rounded-full font-semibold text-white text-sm transition pointer-events-auto"
            >
              Solicitar <MoveRight class="ml-2 w-5 h-5" />
            </a>
          </div>
        </div>
      </article>

      <!-- Desagote -->
      <article
        class="group relative bg-white shadow hover:shadow-lg rounded-2xl ring-1 ring-neutral-200 aspect-square overflow-hidden transition"
      >
        <a
          href="/servicios/desagote"
          aria-label="Ver más sobre Desagote"
          class="absolute inset-0"
        >
          <Image
            src={desagoteImg}
            alt="Desagote y bombeo de piscina"
            class="absolute inset-0 w-full h-full object-cover"
          />
          <div
            class="absolute inset-0 bg-gradient-to-t from-black/60 via-black/20 to-transparent"
          >
          </div>
        </a>
        <div
          class="bottom-0 absolute inset-x-0 p-5 text-white pointer-events-none"
        >
          <h3 class="font-semibold text-lg">Desagote</h3>
          <p class="mt-1 text-white/80 text-sm">
            Vaciado seguro y puesta a punto.
          </p>
          <div class="flex gap-3 mt-4">
            <a
              href="/servicios/desagote"
              class="inline-flex items-center hover:bg-white/10 backdrop-blur px-4 py-2 border border-white/70 rounded-full text-sm pointer-events-auto"
            >
              <Plus class="mr-2 w-5 h-5" /> Más info
            </a>
            <a
              href={mkWsp("Hola! Quiero solicitar el servicio de Desagote")}
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center bg-blue-600 hover:bg-blue-700 px-4 py-2 rounded-full font-semibold text-white text-sm transition pointer-events-auto"
            >
              Solicitar <MoveRight class="ml-2 w-5 h-5" />
            </a>
          </div>
        </div>
      </article>

      <!-- CTA final -->
      <article
        class="relative bg-gradient-to-br from-blue-700 via-blue-600 to-blue-500 shadow-xl p-8 md:p-10 rounded-2xl aspect-square text-white text-center"
      >
        <div class="flex flex-col justify-center items-center h-full">
          <h3 class="font-bold text-2xl md:text-3xl">
            ¿No sabés qué servicio necesitás?
          </h3>
          <p class="mt-3 max-w-prose text-blue-50 text-sm md:text-base">
            Contanos tu caso y te orientamos sin compromiso.
          </p>
          <a
            href={mkWsp(
              "Hola! Necesito asesoramiento para elegir el servicio adecuado para mi pileta."
            )}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center bg-white hover:bg-blue-50 shadow-md mt-6 px-6 py-3 rounded-full font-semibold text-blue-700 transition"
            aria-label="Consultar por WhatsApp"
          >
            Consulta ahora mismo <MoveRight class="ml-2 w-6 h-6" />
          </a>
        </div>
      </article>
    </div>
  </section>
</Layout>
