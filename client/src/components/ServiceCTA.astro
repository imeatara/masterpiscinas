---
const {
  serviceTitle = "Servicio",
  wspHref = "#",
  email = "masterpiscinas.sj@gmail.com",
  title = "¿Querés este servicio?",
  subtitle = "Escribinos por WhatsApp y coordinamos la visita.",
} = Astro.props;

const mailHref = `mailto:${email}?subject=${encodeURIComponent("Consulta: " + serviceTitle)}`;
---

<section aria-labelledby="cta-title">
  <div
    class="flex md:flex-row flex-col justify-between items-start md:items-center gap-5 bg-gradient-to-r from-blue-700 to-blue-500 shadow p-6 md:p-8 rounded-3xl text-white"
  >
    <div>
      <p id="cta-title" class="font-semibold text-lg">{title}</p>
      <p class="text-blue-50">{subtitle}</p>
    </div>

    <div class="flex sm:flex-row flex-col gap-3 w-full md:w-auto">
      <a
        href={wspHref}
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex justify-center items-center bg-white hover:bg-blue-50 px-5 py-3 rounded-full w-full sm:w-auto font-semibold text-blue-700 transition"
      >
        Solicitar por WhatsApp
      </a>
      <a
        href={mailHref}
        class="inline-flex justify-center items-center hover:bg-white/10 px-5 py-3 border border-white/80 rounded-full w-full sm:w-auto text-white transition"
      >
        Enviar correo
      </a>
    </div>
  </div>
</section>
